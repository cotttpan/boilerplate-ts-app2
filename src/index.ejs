<% const meta = htmlWebpackPlugin || null %>
<% const isProd = meta.options.env === 'production' %>
<% const hash =  meta.options.hash ? `?${Date.now()}` : '' %>

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="app.bundle.css<%= hash %>">
    <title>pomodoro timer</title>
</head>

<body>
    <div id="root"></div>

    <script src="app.bundle.js<%= hash %>" type="text/javascript"></script>

    <% if (!isProd) { %>
        <script id="__bs_script__">
        //<![CDATA[
        document.write("<script async src='http://HOST:3000/browser-sync/browser-sync-client.js?v=2.18.12'><\/script>".replace("HOST", location.hostname));
        //]]>
        </script>
    <% } %>
</body>
</html>