{
    "compilerOptions": {
        "jsx": "react",
        "jsxFactory": "h",
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "lib": [
            "dom",
            "es2016",
            "webworker"
        ],
        "experimentalDecorators": true,
        "outDir": ".compiled",
        "allowJs": true,
        "checkJs": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noEmitOnError": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "pretty": true,
        "types": [
            "node",
            "jest"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "./src/*"
            ],
            "@*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useCache": true
    }
}